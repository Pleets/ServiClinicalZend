<?php
$title = 'Editar entidad';
$this->headTitle($title);
?>
<h3><?php echo $this->escapeHtml($title); ?></h3>

<?php if (isset($Success) and $Success): ?>
<div class="alert alert-success alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <strong><span class="glyphicon glyphicon-exclamation-sign"></span></strong>  La entidad ha sido editada satisfactoriamente
</div>
	<?php if (!$xmlHttpRequest): ?>
		<a href="<?php echo $this->url('settings', array('action'=>'index')) ?>" class="btn btn-primary">Volver</a><br /><br />
	<?php endif; ?>
<?php endif; ?>

<?php if (isset($Exception)): ?>
<div class="alert alert-danger alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <strong><span class="glyphicon glyphicon-exclamation-sign"></span></strong> <?= $Exception ?>
</div>
<?php endif; ?>

<?php
if (isset($form))
{
	$form = $this->form;
	$form->setAttribute(
		'action', $this->url('settings',
		array(
			'action' => 'edit-entity',
			'id'     => $this->id,
		)
	));
	$form->prepare();
	echo $this->form()->openTag($form);
	echo $this->formHidden($form->get('cod_ent'));
	echo $this->formRow($form->get('nom_ent'));
	echo $this->formRow($form->get('dir_ent'));
	if (!$xmlHttpRequest):
		echo $this->formSubmit($form->get('submit'));
	endif;
	echo $this->form()->closeTag();
}
?>
