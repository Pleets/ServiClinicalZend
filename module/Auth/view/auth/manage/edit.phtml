<?php
if (isset($form))
{
	$form = $this->form;
	$form->setAttribute(
		'action', $this->url('auth',
		array(
			'action' => 'edit',
			'id'     => $this->id,
		)
	));
	$form->prepare(); 
	echo $this->form()->openTag($form);
	echo $this->formHidden($form->get('cod_usu'));
	echo $this->formRow($form->get('nom_usu'));
	echo $this->formRow($form->get('cod_per'));
	if (!$xmlHttpRequest):
		echo $this->formSubmit($form->get('submit'));
	endif;
	echo $this->form()->closeTag();
}
?>
